<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Progress Bar</masterLabel>
    <description>To use within Flows with multiple screens to indicate to the user their step in the wizard</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="steps" label="Steps List" description="Comma separated list of steps for the Flow" type="String" role="inputOnly"/>
            <property name="currentStep" label="Current Step" description="Current Step" type="String" role="inputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>